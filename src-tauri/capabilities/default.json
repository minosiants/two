{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    "fs:default",
    "fs:allow-write-text-file",
    "fs:allow-read-text-file",
    "fs:allow-mkdir",
    "fs:allow-create",
    "fs:allow-write",
    "fs:allow-remove",
    "fs:allow-exists",
    {
      "identifier": "fs:scope",
      "allow": [
        {
          "path": "$APPLOCALDATA"
        },
        {
          "path": "$APPLOCALDATA/**/*"
        }
      ]
    }
  ]
}
